<div class="main position-relative">
  <div class="navbar">
    <div class="navbar-btn">
      <span class="material-icons-outlined"
        id="btn-icon">
        menu
      </span>
    </div>
    <div class="navbar-content">
      <div class="heading">
        <a href="/admin/tours"
          class="homeBtn">
          <span class="material-icons homeBtn-icon">
            home
          </span>
        </a>
        <div class="heading-title">
          Danh sách Tour
        </div>
      </div>
      <ul class="tours-list">
        {{#each tours}}
          <li class="tours-item">
            <div class="tour-left">
              <input type="checkbox"
                class="tour-check" />
              <input type="hidden"
                class="tour-id"
                value="{{this._id}}">
              <img src="/imgs/logo3D.png"
                alt="thumbnail"
                class="tour-thumbnail" />
            </div>
            <div class="tour-right">
              <div class="tour-name">
                {{this.tour_name}}
              </div>
              <div class="tour-price">
                {{formatPrice this.tour_price}}đ
              </div>
            </div>
          </li>
        {{/each}}
      </ul>
      <div class="navbar-func">
        <div class="navbar-func-top">
          <button class="navbar-func-btn update-btn">
            <span class="material-icons-outlined">
              edit
            </span>
            <div class="navbar-btn-text">
              Cập nhật
            </div>
          </button>
          <button class="navbar-func-btn delete-btn">
            <span class="material-icons-outlined">
              delete_forever
            </span>
            <div class="navbar-btn-text">
              Xóa
            </div>
          </button>
        </div>
        <div class="navbar-func-bot">
          <button class="navbar-func-btn add-btn"
            id="addTourButton">
            <span class="material-icons-outlined">
              add_location
            </span>
            <div class="navbar-btn-text">
              Thêm Tour
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div id="viewDiv"
    style="position: relative;">
    {{!-- <button type="button" class="tour-map__button-add" id="addTourButton" >Thêm Tour</button> --}}
   
    <div class="tour-map__div-add-tour" id="addTourDiv">
        <div class="tour-popup">
            <i class="material-icons tour-map__hidden-form-div" id="hideAddDiv">close</i>
            <form class="tour-popup__form" method="post" id="addTourForm">
               <h1 class="tour-popup_title">Thêm tour</h1>
                <div class="tour-popup__form-group">
                    <label for="tour-popup-name" class="tour-popup__label">Tên Tour</label>
                    <input type="text" id="tour-popup-name" name="tour-popup-name" class="tour-popup__input" placeholder="Nhập tên Tour...">
                </div>
                <div class="tour-popup__flex-group">
                <div class="tour-popup__form-group">
                    <label for="tour-popup-price" class="tour-popup__label">Giá vé</label>
                    <input type="text" id="tour-popup-price" name="tour-popup-price" class="tour-popup__input" placeholder="Nhập số tiền...">
                </div>
                <div class="tour-popup__form-group">
                    <label for="tour-popup-total-tickets" class="tour-popup__label">Tổng số vé</label>
                    <input type="number" id="tour-popup-total-tickets" name="tour-popup-total-tickets" class="tour-popup__input" value="0">
                </div>
                <div class="tour-popup__form-group">
                    <label for="tour-popup-available-tickets" class="tour-popup__label">Số vé còn trống</label>
                    <input type="number" id="tour-popup-available-tickets", name="tour-popup-available-tickets" class="tour-popup__input" value="0">
                </div>              
                </div>
                <div class="tour-popup__flex-group">
                <div class="tour-popup__form-group">
                    <label for="tour-popup-start-date" class="tour-popup__label">Ngày khởi hành</label>
                    <input type="date" id="tour-popup-start-date" name="tour-popup-start-date" class="tour-popup__input">
                </div>
                <div class="tour-popup__form-group">
                    <label for="tour-popup-days" class="tour-popup__label">Số ngày</label>
                    <input type="text" id="tour-popup-days" name="tour-popup-days" class="tour-popup__input" placeholder="Số ngày...">
                </div>
                <div class="tour-popup__form-group">
                    <label for="tour-popup-nights" class="tour-popup__label">Số đêm</label>
                    <input type="text" id="tour-popup-nights" name="tour-popup-nights" class="tour-popup__input" placeholder="Số đêm...">
                </div>
                </div>
                <div class="tour-popup__form-group">
                    <label for="" class="tour-popup__label">Điểm đến</label>
                    <div class="tour-popup__tab-group">
                        <div class="tour-popup__location-tabs" id="tour-popup__current-locations">
                        </div>
                        <div class="tour-popup__button-area-div">
                            <button type="button" class="tour-popup__button" id="addLocationButton">Thêm điểm đến +</button>
                            <div class="tour-popup__all-location-div" id="allLocationDiv">
                                <i class="material-icons tour-popup__hidden-div" id="hideLocationDiv">close</i>
                                <div class="tour-popup__all-location-ul">
                                    <p class="tour-popup__location">
                                        Ba Đình
                                    </p>
                                    <p class="tour-popup__location">
                                        Hồ Chí Minh
                                    </p>
                                    <p class="tour-popup__location">
                                        Bà Rịa
                                    </p>
                                    <p class="tour-popup__location">
                                        Vịnh Hạ Long
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tour-popup__form-group tour__form-group--image">
                    <label class="tour-popup__label">Hình ảnh</label>
                    <div class="tour-popup__image-group">
                        <div class="tour-popup__all-image-div">
                        </div>
                        <button type="button" class="tour-popup__image-button" id="addImageButton">
                            <i class="material-icons-outlined tour-popup__add-image-icon">add_photo_alternate</i>
                        </button>
                        <input type="file" class="tour-popup__hidden-input" id="imageInput" accept="image/*">
                    </div>
                </div>
                <div class="tour-popup__form-group">
                    <label for="tour-popup-description" class="tour-popup__label">Mô tả</label>
                    <textarea id="tour-popup-description" name="tour-popup-description" class="tour-popup__textarea" placeholder="Nhập mô tả..."></textarea>
                </div>
                <div class="tour-popup__form-group tour__form-group--submit">
                    <button type="button" class="tour-popup__submit-button" id="submitAddTourButton">
                        <i class="material-icons">save</i>
                        Lưu
                    </button>
                </div>
            </form>
        </div>        
    </div>
  </div>
  {{> admin/deletePopup}}
</div>