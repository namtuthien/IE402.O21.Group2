<div class="px-3">
    <div class="d-flex gap-3 justify-content-between align-items-center">
        <div class="summary-item col-md-2 gap-2 p-2 bg-white d-flex justify-content-start align-items-center rounded-3">
            <div class="dashboard__icon-bg">
                <i class="material-icons dashboard__icon-color-1 p-2  fs-1 rounded-3">
                    groups
                </i>
            </div>
            <div class="text text-start">
                Khách hàng
                <br>
                <span>
                    {{totalCustomers}}
                </span>
            </div>
        </div>
        <div class="summary-item col-md-2 gap-2 p-2 bg-white d-flex justify-content-start align-items-center rounded-3">
            <div class="dashboard__icon-bg">
                <i class="material-icons dashboard__icon-color-2 p-2  fs-1 rounded-3">
                    local_mall
                </i>
            </div>
            <div class="text text-start">
                Đơn đặt
                <br>
                <span>
                    {{totalBookings}}
                </span>
            </div>
        </div>
        <div class="summary-item col-md-2 p-2 gap-2 bg-white d-flex justify-content-start align-items-center rounded-3">
            <div class="dashboard__icon-bg">
                <i class="material-icons dashboard__icon-color-3 p-2  fs-1 rounded-3">
                    paid
                </i>
            </div>
            <div class="text text-start">
                Tổng doanh thu
                <br>
                <span>
                    {{totalRevenue}}
                </span>
            </div>
        </div>
        <div
            class="summary-item col-md-2 p-2 gap-2  bg-white d-flex justify-content-start align-items-center rounded-3">
            <div class="dashboard__icon-bg">
                <i class="material-icons dashboard__icon-color-4 p-2  fs-1 rounded-3">
                    star
                </i>
            </div>
            <div class="text text-start">
                Đánh giá
                <br>
                <span>
                    {{totalRatings}}
                </span>
            </div>
        </div>
    </div>
    <div class="d-flex pt-4 gap-3 justify-content-between align-items-start w-100">
        <div class="bg-white w-50  rounded-3 p-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="p-0 m-0">
                    Tour đặt nhiều
                </h5>
                <a href="/admin/tours" class="btn btn-link p-0 m-0 d-flex justify-content-between align-items-center">
                    <div>
                        Xem tất cả
                    </div>
                    <i class="material-icons">
                        chevron_right
                    </i>
                </a>
            </div>
            <hr>
            <div id="topBookingTours">
                {{#each top5BookingTours}}
                <div class="d-flex justify-content-between align-items-center pb-2 dashboard__tour">
                    <div class="dashboard__tour-ranking fw-bold">
                        <span>
                            #{{getIndex @index}}
                        </span>
                    </div>
                    <div class="col-md-8">
                        {{this.tour.tour_name}}
                    </div>
                    <div>
                        <span class="fw-bold">
                            {{this.bookingCount}}
                        </span>
                        lượt
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="bg-white w-50  rounded-3 p-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="m-0 p-0">
                    Doanh thu Tour
                </h5>
                <a href="/admin/tours" class="btn btn-link p-0 m-0 d-flex justify-content-between align-items-center ">
                    <div>
                        Xem tất cả
                    </div>
                    <i class="material-icons">
                        chevron_right
                    </i>
                </a>
            </div>
            <hr>
            <div id="topRevenueTours">
                {{#each top5RevenueTours}}
                <div class="d-flex justify-content-between align-items-center pb-2 dashboard__tour">
                    <div class="dashboard__tour-ranking fw-bold">
                        <span>
                            #{{getIndex @index}}
                        </span>
                    </div>
                    <div class="col-md-8">
                        {{this.tour.tour_name}}
                    </div>
                    <div>
                        <span>
                            {{this.bookingRevenue}}
                        </span>
                        VND
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="d-flex pt-4 gap-2 justify-content-between align-items-center">
        <div class="bg-white rounded-3  p-3 w-100">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="m-0 p-0">Thống kê doanh thu và số khách đặt Tour theo tháng</h5>
                <button type="button" class="btn btn-link p-0 m-0 d-flex justify-content-between align-items-center">
                    <div>
                        Xuất
                    </div>
                    <i class="material-icons">
                        chevron_right
                    </i>
                </button>
            </div>
            <hr>
            <canvas id="revenue"></canvas>
        </div>
    </div>
    <div class="d-flex pt-4 mb-2 gap-2 justify-content-between">
        <div class="bg-white rounded-3  col-md-8 p-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="m-0 p-0">Hoạt động đặt Tour theo tháng</h5>
                <button type="button" class="btn btn-link p-0 m-0 d-flex justify-content-between align-items-center">
                    <div>
                        Xuất
                    </div>
                    <i class="material-icons">
                        chevron_right
                    </i>
                </button>
            </div>
            <hr>
            <canvas id="cancelAndSuccessBooking"></canvas>
        </div>
        <div class="bg-white rounded-3  p-3 col-md-4">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="m-0 p-0">Tỷ lệ đặt Tour theo khu vực</h5>
                <button type="button" class="btn btn-link p-0 m-0 d-flex justify-content-between align-items-center">
                    <div>
                        Xuất
                    </div>
                    <i class="material-icons">
                        chevron_right
                    </i>
                </button>
            </div>
            <hr>
            <canvas id="bookingRate"></canvas>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>