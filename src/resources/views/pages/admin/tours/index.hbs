<section class="tourHeading-section">
  <div class="tourHeading">
    <div class="tourHeadingLeft">
      <h2 class="tourHeadingLeft-title">
        Danh sách Tour
      </h2>
    </div>
    <div class="tourHeadingRight">
      <button type="button" class="btn btn-primary">Xem dưới dạng bản đồ</button>
    </div>
  </div>
</section>

<section class="toursTable-section">
  <div class="table-responsive toursTable-container">
    <table class="table-bordered table toursTable">
      {{! <caption>
        List of users
      </caption> }}
      <thead id="toursTable-heading">
        <tr class="toursTable-heading_row">
          <th class="tourTable-heading_title" scope="col">
            No.
          </th>
          <th class="tourTable-heading_title" scope="col">
            Tên Tour
          </th>
          <th class="tourTable-heading_title" scope="col">
            Giá vé
          </th>
          <th class="tourTable-heading_title" scope="col">
            Ngày khởi hành
          </th>
          <th class="tourTable-heading_title" scope="col">
            Số ngày
          </th>
          <th class="tourTable-heading_title" scope="col">
            Số đêm
          </th>
          <th class="tourTable-heading_title" scope="col">
            Số lượng vé trống
          </th>
          <th class="tourTable-heading_title" scope="col">
          </th>
        </tr>
      </thead>
      <tbody id="toursTableBody">
        {{#each tours}}
          <tr>
            <td class="">
              <p class="toursTable-data">
            {{tourIndex @index}}
            </p>
            </td>
            <td class="">
              <p class="toursTable-data">
            {{this.tour_name}}
            </p>
            </td>
            <td class="">
              <p class="toursTable-data">
            {{this.tour_price}}
            </p>
            </td>
            <td class="">
              <p class="toursTable-data">
            {{tourGetStartingDay this.tour_starting_day}}
            </p>
            </td>
            <td class="">
              <p class="toursTable-data">
            {{this.tour_number_of_days}}
            </p>
            </td>
            <td class="">
              <p class="toursTable-data">
            {{this.tour_number_of_nights}}
            </p>
            </td>
            <td class="">
              <p class="toursTable-data">
            {{this.tour_total_ticket_available}}
            </p>
            </td>
            <td class=""> 
            <div class="toursAction_container">
              <span class="material-icons toursAction-icon">
                more_vert
                </span>
            </div>
           
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script src="./helper.js" type="script"></script>