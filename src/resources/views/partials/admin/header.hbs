<div class="header d-flex justify-content-between align-items-center w-100 py-2 ps-3 mb-4 bg-white box">
    <div class="fw-bold fs-4">
        {{pageTitle}}
    </div>
    {{> admin/openMapButton}}
    {{#if
        (eq
        user.user_role 'admin'
        )}}
        <a class="header__left-div d-flex"
            href="/admin/dashboard"
            id="header-logo">
            <img class="header__logo"
                src="/imgs/logo.webp"
                alt="2Tour - Hệ thống đặt Tour">
        </a>
    {{/if}}
    {{#if
        (eq
        user.user_role 'staff'
        )}}
        <a class="header__left-div d-flex"
            href="/staff/tours"
            id="header-logo">
            <img class="header__logo"
                src="/imgs/logo.webp"
                alt="2Tour - Hệ thống đặt Tour">
        </a>
    {{/if}}
</div>